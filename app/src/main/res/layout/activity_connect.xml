<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sys_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivities.ConnectCarsActivity">
    <!-- Top Part -->
    <LinearLayout
        android:id="@+id/topPartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:gravity="center">
            <ImageView
                android:id="@+id/circleImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/circle"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/small_spacing"
                android:layout_marginBottom="@dimen/large_spacing"
                android:fontFamily="@font/cooper_font"
                android:text="@string/cars_exhibition"
                android:textAllCaps="true"
                android:textColor="@color/FontColor"
                android:textSize="25dp" />

    </LinearLayout>

    <!-- Bottom Part -->
    <LinearLayout
        android:id="@+id/bottomPartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="270dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/lockButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle"
            android:src="@drawable/lock1"
            android:scaleType="centerCrop"
            android:contentDescription="Button 1" />

        <ImageButton
            android:id="@+id/unlockButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle"
            android:src="@drawable/unlock1"
            android:scaleType="centerCrop"
            android:layout_marginStart="30dp"
            android:contentDescription="Button 2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/topPartLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="130dp"
        android:gravity="center">
        <ImageButton
            android:id="@+id/connectBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle"
            android:src="@drawable/on"
            android:scaleType="centerCrop" />
    </LinearLayout>
</RelativeLayout>